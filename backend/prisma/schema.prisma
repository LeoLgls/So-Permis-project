// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Formation {
  id    String   @id @default(auto()) @map("_id") @db.ObjectId
  prix  Int
  type  String
  infos String
}

model Administrateur {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  password String
}

model Newsletter {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  email  String   @unique
  nom    String   @default("")
  prenom String   @default("")
}

model Actualite {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  titre   String
  texte   String
  image   String
  date    String
  sources String
}